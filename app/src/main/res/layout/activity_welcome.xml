<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary"
    tools:context=".ui.activity.WelcomeActivity">

    <!-- A simple background with the PocketSafe logo -->
    <ImageView
        android:id="@+id/ivSplashLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/pocketsafe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PocketSafe"
        android:textSize="32sp"
        android:textColor="@color/primary"
        android:fontFamily="@font/pixel_game"
        app:layout_constraintTop_toBottomOf="@id/ivSplashLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
