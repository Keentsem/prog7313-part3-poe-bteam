<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner_background"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ivDial"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/dial"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvDialTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Savings Dial Feature"
        android:textSize="24sp"
        android:textColor="#f3c34e"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="@font/pixel_game"
        app:layout_constraintTop_toBottomOf="@id/ivDial"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvDialMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click the dial to enter your savings amount. Each time you add savings, the progress bar will move closer to your goal. When you reach your goal, a celebration animation will appear!"
        android:textSize="16sp"
        android:textColor="#f3c34e"
        android:fontFamily="@font/pixel_game"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvDialTitle"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnGotIt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GOT IT"
        android:textColor="#5b3f2c"
        android:background="#f3c34e"
        android:fontFamily="@font/pixel_game"
        android:padding="12dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvDialMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
