<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#AEE6FF"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to PocketSafe!"
        android:textColor="#FFD1AE"
        android:textSize="28sp"
        android:fontFamily="@font/pixel_game"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's set up your savings goals"
        android:textColor="#FFD1AE"
        android:textSize="20sp"
        android:fontFamily="@font/pixel_game"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etMonthlyGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Monthly Savings Goal"
            android:inputType="numberDecimal"
            android:fontFamily="@font/pixel_game"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFD1AE" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etMonthlyIncome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Monthly Income"
            android:inputType="numberDecimal"
            android:fontFamily="@font/pixel_game"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFD1AE" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="SAVE GOALS"
        android:fontFamily="@font/pixel_game"
        android:textSize="16sp"
        android:background="@drawable/curved_button_blue" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/login"
        android:scaleType="fitCenter"
        android:layout_marginTop="16dp" />

</LinearLayout> 