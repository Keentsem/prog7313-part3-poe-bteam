<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner_background"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/pocketsafe"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvWelcomeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to PocketSafe!"
        android:textSize="24sp"
        android:textColor="#f3c34e"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="@font/pixel_game"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvWelcomeMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PocketSafe is your pixel-themed personal finance tracker. Track expenses, manage subscriptions, set savings goals, and get bill reminders - all in one place with a fun retro style!"
        android:textSize="16sp"
        android:textColor="#f3c34e"
        android:fontFamily="@font/pixel_game"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvWelcomeTitle"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvWelcomeMessage"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/btnGetStarted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GET STARTED"
            android:padding="12dp"
            android:textColor="#5b3f2c"
            android:background="@drawable/curved_button"
            android:fontFamily="@font/pixel_game"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
