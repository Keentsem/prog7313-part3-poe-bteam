<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#511900"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expense Categories"
            android:textColor="#FFD1AE"
            android:textSize="28sp"
            android:fontFamily="@font/pixel_game"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp" />

        <!-- Predefined Categories Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Predefined Categories"
            android:textColor="#FFD1AE"
            android:textSize="20sp"
            android:fontFamily="@font/pixel_game"
            android:layout_marginBottom="16dp" />

        <!-- Entertainment Category -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#E6AEFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/entertainment"
                    android:layout_gravity="center_vertical"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entertainment"
                        android:textColor="#511900"
                        android:textSize="18sp"
                        android:fontFamily="@font/pixel_game"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Movies, going out, leisure activities"
                        android:textColor="#511900"
                        android:textSize="14sp"
                        android:fontFamily="@font/pixel_game"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Necessities Category -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#E6AEFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/necessity"
                    android:layout_gravity="center_vertical"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Necessities"
                        android:textColor="#511900"
                        android:textSize="18sp"
                        android:fontFamily="@font/pixel_game"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Groceries, electricity, essential living costs"
                        android:textColor="#511900"
                        android:textSize="14sp"
                        android:fontFamily="@font/pixel_game"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sport Category -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#E6AEFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/sports"
                    android:layout_gravity="center_vertical"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sport"
                        android:textColor="#511900"
                        android:textSize="18sp"
                        android:fontFamily="@font/pixel_game"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sporting equipment, gear, and activities"
                        android:textColor="#511900"
                        android:textSize="14sp"
                        android:fontFamily="@font/pixel_game"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Other Category -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#E6AEFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/medix"
                    android:layout_gravity="center_vertical"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other"
                        android:textColor="#511900"
                        android:textSize="18sp"
                        android:fontFamily="@font/pixel_game"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medical aid, miscellaneous expenses"
                        android:textColor="#511900"
                        android:textSize="14sp"
                        android:fontFamily="@font/pixel_game"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Custom Category Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Custom Category"
            android:textColor="#FFD1AE"
            android:textSize="20sp"
            android:fontFamily="@font/pixel_game"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/etCategoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Category Name"
            android:background="@drawable/curved_background"
            android:padding="16dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFD1AE"
            android:textSize="16sp"
            android:fontFamily="@font/pixel_game"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:background="@drawable/curved_background"
            android:padding="16dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFD1AE"
            android:textSize="16sp"
            android:fontFamily="@font/pixel_game"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etMonthlyAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Monthly Amount"
            android:inputType="numberDecimal"
            android:background="@drawable/curved_background"
            android:padding="16dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFD1AE"
            android:textSize="16sp"
            android:fontFamily="@font/pixel_game"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnSaveCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Category"
            android:textColor="#FFFFFF"
            android:background="@drawable/curved_button"
            android:fontFamily="@font/pixel_game"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnBackToMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to Menu"
            android:textColor="#FFFFFF"
            android:background="@drawable/curved_button"
            android:fontFamily="@font/pixel_game" />

    </LinearLayout>
</ScrollView>
