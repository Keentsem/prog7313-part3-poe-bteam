<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base teal color using the user's preferred teal color scheme -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/teal_primary"/>
        </shape>
    </item>
    
    <!-- Texture pattern created with lines instead of bitmap -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:color="@color/teal_light" android:width="1dp" android:dashWidth="1dp" android:dashGap="10dp"/>
        </shape>
    </item>
    
    <item>
        <shape android:shape="rectangle">
            <stroke android:color="@color/teal_light" android:width="1dp" android:dashWidth="1dp" android:dashGap="10dp" />
            <rotate android:fromDegrees="90"/>
        </shape>
    </item>
    
    <!-- Pocket shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="#00000000"
                android:centerColor="#33000000"
                android:endColor="#00000000"/>
        </shape>
    </item>
</layer-list> 