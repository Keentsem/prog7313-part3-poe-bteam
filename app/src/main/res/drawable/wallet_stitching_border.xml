<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#5b3f2c" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Stitching effect - using a dashed stroke with pixel styling -->
    <item android:left="6dp" android:top="6dp" android:right="6dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#511900" />
            <stroke
                android:width="3dp"
                android:color="#f3c34e"
                android:dashWidth="8dp"
                android:dashGap="6dp" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
